# Django Settings
# Genera una nueva SECRET_KEY para produccion
# Puedes usar: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=tu-secret-key-aqui

# Debug Mode (True/False)
# En produccion debe ser False
DEBUG=True

# Allowed Hosts (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration
# Para desarrollo, usa el backend de consola (no requiere configuracion adicional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para produccion, configura estos valores:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@gmail.com
# EMAIL_HOST_PASSWORD=tu-contrasena-de-aplicacion
